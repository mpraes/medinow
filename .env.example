# Medinow Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# API Keys
# ============================================================================

# Composio API Key (required for Google Calendar integration)
# Get it from: https://app.composio.dev/settings
COMPOSIO_API_KEY=your_composio_api_key_here

# Google Calendar Auth Config ID (from Composio dashboard)
# Get it from: https://app.composio.dev/apps/googlecalendar
GOOGLE_CALENDAR_AUTH_KEY=your_google_calendar_auth_config_id_here

# Groq API Key (required for LLM operations)
# Get it from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key_here

# Twilio Account SID (for WhatsApp integration)
# Get it from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here

# Twilio Auth Token
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here

# Twilio WhatsApp Number (format: whatsapp:+1234567890)
TWILIO_WHATSAPP_NUMBER=whatsapp:+your_twilio_number_here

# ============================================================================
# Composio Configuration
# ============================================================================

# Composio User ID (UUID format, generated during authentication)
# This is created when you run get_gmail_token.py
COMPOSIO_USER_ID=ec8362e9-0ae1-40a4-b831-0766bb6ebdf4

# ============================================================================
# Application Configuration
# ============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Enable debug mode (set to 'false' in production)
DEBUG=true

# ============================================================================
# Database Configuration (Future)
# ============================================================================

# Database URL (for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/medinow

# Redis URL (for session storage - future use)
# REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Logging Configuration
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# Calendar Configuration
# ============================================================================

# Default timezone for calendar operations
DEFAULT_TIMEZONE=America/Sao_Paulo

# Default calendar ID (use 'primary' for main calendar)
DEFAULT_CALENDAR_ID=primary

# Default appointment duration in minutes
DEFAULT_APPOINTMENT_DURATION=30

# Business hours configuration (24-hour format)
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=17:00

# ============================================================================
# Security Configuration
# ============================================================================

# Secret key for session management (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your_secret_key_here

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# ============================================================================
# Feature Flags
# ============================================================================

# Enable calendar integration
ENABLE_CALENDAR=true

# Enable proactive notifications
ENABLE_NOTIFICATIONS=false

# ============================================================================
# Notes
# ============================================================================

# 1. Never commit the actual .env file to version control
# 2. Keep your API keys secure and rotate them regularly
# 3. Use different keys for development and production environments
# 4. To get started with Composio:
#    - Sign up at https://app.composio.dev
#    - Create a Google Calendar integration
#    - Run backend/integrations/composio_calendar/get_gmail_token.py to authenticate
#    - Copy the generated COMPOSIO_USER_ID to your .env file
